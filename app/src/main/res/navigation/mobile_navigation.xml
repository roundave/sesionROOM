<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_create">

    <fragment
        android:id="@+id/navigation_create"
        android:name="com.davidmartinez.sesionroom.ui.create.CreateFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_create" >
        <action
            android:id="@+id/action_navigation_create_to_navigation_read"
            app:destination="@id/navigation_read" />
    </fragment>

    <fragment
        android:id="@+id/navigation_read"
        android:name="com.davidmartinez.sesionroom.ui.Read.ReadFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_read" >
        <action
            android:id="@+id/action_navigation_read_to_navigation_notifications"
            app:destination="@id/navigation_update" />
    </fragment>

    <fragment
        android:id="@+id/navigation_update"
        android:name="com.davidmartinez.sesionroom.ui.update.updateFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_update" >
        <action
            android:id="@+id/action_navigation_update_to_deleteFragment"
            app:destination="@id/navigation_delete" />
    </fragment>
    <fragment
        android:id="@+id/navigation_delete"
        android:name="com.davidmartinez.sesionroom.ui.delete.DeleteFragment"
        android:label="@string/title_delete"
        tools:layout="@layout/fragment_delete" />
    <fragment
        android:id="@+id/navigation_list"
        android:name="com.davidmartinez.sesionroom.ui.lista.listFragment"
        android:label="@string/title_list"
        tools:layout="@layout/fragment_list" >
        <action
            android:id="@+id/action_listFragment_to_navigation_create"
            app:destination="@id/navigation_create" />
    </fragment>
</navigation>